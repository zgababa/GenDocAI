{
  "name": "docai",
  "version": "1.0.1",
  "description": "DocAi is an automated tool that leverages artificial intelligence to generate comprehensive Markdown documentation from JS/TS code",
  "main": "./src/index.js",
  "engines": {
    "node": ">=14.0.0"
  },
  "keywords": [
    "automated documentation",
    "Documentation",
    "Artificial intelligence",
    "AI",
    "Markdown",
    "JavaScript",
    "TypeScript"
  ],
  "type": "module",
  "scripts": {
    "check": "tsc --noEmit",
    "build": "tsc -p tsconfig.build.json",
    "dev": "tsc -p tsconfig.build.json --watch",
    "add-comment": "node add-comment",
    "generate-doc": "node generate-doc",
    "lint": "npx eslint . --ext .js,.jsx,.ts --config .eslintrc.cjs",
    "test": "jest --silent",
    "test-watch": "jest --watch "
  },
  "files": [
    "dist"
  ],
  "bin": "./dist/bin/docai.js",
  "dependencies": {
    "@babel/generator": "^7.22.10",
    "@babel/parser": "^7.22.10",
    "@babel/traverse": "^7.22.10",
    "dependency-tree": "^10.0.9",
    "dotenv": "^16.3.1",
    "js-yaml": "^4.1.0",
    "langchain": "^0.0.132"
  },
  "devDependencies": {
    "@babel/types": "^7.22.10",
    "@types/babel__generator": "^7.6.4",
    "@types/babel__traverse": "^7.20.1",
    "@types/jest": "^29.5.3",
    "@types/js-yaml": "^4.0.5",
    "@types/minimist": "^1.2.2",
    "@types/node": "^20.5.2",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "eslint": "^8.47.0",
    "eslint-config-standard-with-typescript": "^38.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-n": "^16.0.2",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.6.3",
    "minimist": "^1.2.8",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
}
